pipeline {
    agent any

    tools {
        // This must match the Maven name you configured in Jenkins -> Manage Jenkins -> Global Tool Configuration
        maven 'Maven-3.9.9'
    }

    environment {
        // Use shared Maven repository for caching dependencies
        MAVEN_OPTS = "-Dmaven.repo.local=/var/lib/jenkins/.m2/repository"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning source code from GitHub...'
                git branch: 'master', url: 'https://github.com/seshuadi969/retail-banking.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh "mvn clean compile"
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh "mvn test"
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging application...'
                sh "mvn package"
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests completed successfully!'
        }
        failure {
            echo '❌ Build failed. Please check the logs.'
        }
    }
}
