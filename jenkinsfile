pipeline {
    agent any

    tools {
        jdk 'JDK21'                 // JDK 21 (must be installed in Jenkins)
        maven 'Maven-3.9.9'         // Maven (configured in Jenkins)
    }

    environment {
        APP_NAME = "retail-banking"
        APP_PORT = "8080"
        DEPLOY_DIR = "/opt/${APP_NAME}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/seshuadi969/retail-banking.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh '''
                    echo "Packaging the application..."
                    ls -lh target/*.jar
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    echo "Deploying application..."

                    # Create deployment directory
                    sudo mkdir -p $DEPLOY_DIR

                    # Stop old app if running
                    if pgrep -f "$APP_NAME.jar"; then
                        echo "Stopping old process..."
                        pkill -f "$APP_NAME.jar" || true
                    fi

                    # Copy new JAR
                    JAR_FILE=$(ls target/*.jar | head -n 1)
                    cp $JAR_FILE $DEPLOY_DIR/$APP_NAME.jar

                    # Start new app
                    nohup java -jar $DEPLOY_DIR/$APP_NAME.jar --server.port=$APP_PORT > $DEPLOY_DIR/app.log 2>&1 &
                '''
            }
        }

        stage('Verify') {
            steps {
                sh '''
                    echo "Waiting for app to start..."
                    sleep 10
                    curl -I http://localhost:$APP_PORT || true
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! App is running at http://localhost:${APP_PORT}"
        }
        failure {
            echo "❌ Build failed. Check logs."
        }
    }
}
